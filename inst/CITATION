citHeader("To cite the MatrixCorrelation package in publications use:")

citEntry(entry = "Article",
  title        = "A similarity index for comparing coupled matrices",
  author       = personList(as.person("Ulf Geir Indahl"), as.person("Tormod Næs"), as.person("Kristian Hovde Liland")),
  year         = "2018",
  volume	     = "e3049",
  pages        = "",
  journal      = "Journal of Chemometrics",

  textVersion  =
  paste("Ulf Geir Indahl, Tormod Næs and Kristian Hovde Liland (2018).",
        "A similarity index for comparing coupled matrices.",
        "Journal of Chemometrics, e3049.")
)
